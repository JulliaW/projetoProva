@model IEnumerable<projetoProva.Models.Produto>
@{
    ViewData["Title"] = "Listagem de Produtos";
}
<br />
<h1>Produtos</h1>
<br />
<p align="right">
    <a class="btn btn-outline-dark" asp-action="Create">+</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th scope="col">

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Descricao
                </td>

                <td>
                    <a class="btn btn-outline-primary btn-sm edit" data-id="@item.ProdutoId">
                        Editar
                    </a> |
                    <a class="btn btn-outline-info btn-sm details" data-id="@item.ProdutoId">
                        Detalhes
                    </a> |
                    <a class="btn btn-outline-danger btn-sm delete" data-id="@item.ProdutoId">
                        Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
